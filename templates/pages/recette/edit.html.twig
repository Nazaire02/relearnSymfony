{% extends 'base.html.twig' %}

{% block title %}Cr√©er recette{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mt-4">Modification d'une recette</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            <div class="form-error">
                {{ form_errors(form.nom) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.temps) }}
            {{ form_widget(form.temps) }}
            <div class="form-error">
                {{ form_errors(form.temps) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.numberOfPerson) }}
            {{ form_widget(form.numberOfPerson) }}
            <div class="form-error">
                {{ form_errors(form.numberOfPerson) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.difficulte) }}
            {{ form_widget(form.difficulte) }}
            <div class="form-error">
                {{ form_errors(form.difficulte) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix) }}
            <div class="form-error">
                {{ form_errors(form.prix) }}
            </div>
        </div>

        <div class="form-group  mt-4">
            {{ form_label(form.isFavorite) }}
            {{ form_widget(form.isFavorite) }}
            <div class="form-error">
                {{ form_errors(form.isFavorite) }}
            </div>
        </div>

        {{ form_row(form.ingredients) }}

        {{ form_end(form) }}
    </div>
{% endblock %}
